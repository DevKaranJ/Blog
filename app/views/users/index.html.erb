<%= stylesheet_link_tag "userindex" %>

<ul class='cardlist'>
  <% @users.each do |user| %>
    <li class='card'>
      <div class='userimage'>
        <%= link_to user_path(user) do %>
          <% if user.photo.attached? %>
            <%= image_tag user.photo.variant(resize: "100x100") %>
          <% else %>
            <%= image_tag "users.jpeg", alt: "Default Profile Image", width: 100, height: 100 %>
          <% end %>
        <% end %>
      </div>
      <div class='userinfo'>
        <%= link_to user_path(user) do %>
          <h2 class='username'><%= user.name %></h2>
        <% end %>
        <h3 class='postnumber'>Number of posts: <%= user.posts.count %></h3>
      </div>
    </li>
  <% end %>
</ul>
